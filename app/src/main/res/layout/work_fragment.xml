<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textProfe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Professional Details"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProfe"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:text="Skills" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/ll1"
        android:layout_below="@id/textSkill"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Skill 1"
            android:textColor="@android:color/white"
            />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/companyname"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textjobinfo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="20dp"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:textColorHint="@android:color/white"
        app:boxStrokeColor="@color/colorAccent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex (Java,C,Python)"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Level"
            android:textColor="@android:color/white"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/level1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textjobinfo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:outlineSpotShadowColor="@color/colorAccent"
            android:textColorHint="@android:color/white"
            app:boxStrokeColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/level1edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex ( 1,2,..(out of ))"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="8dp"
        android:id="@+id/addskill1"
        android:layout_below="@id/ll1"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:text="ADD MORE SKILLS"
        android:layout_marginLeft="20dp"
        android:background="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/ll2"
        android:layout_below="@id/addskill1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Skill 2"
            android:textColor="@android:color/white"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/skill2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skill2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:outlineSpotShadowColor="@color/colorAccent"
            android:textColorHint="@android:color/white"
            app:boxStrokeColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/skill2edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex (Java,C,Python)"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Level"
            android:textColor="@android:color/white"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/level2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skill2edt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:outlineSpotShadowColor="@color/colorAccent"
            android:textColorHint="@android:color/white"
            app:boxStrokeColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/level2edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex ( 1,2,..(out of ))"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:id="@+id/ll3"
        android:visibility="invisible"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="8dp"
        android:id="@+id/addskill2"

        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:text="ADD MORE SKILLS"
        android:layout_marginLeft="20dp"
        android:background="#fff"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="8dp"
            android:id="@+id/removeskill2"

            android:drawablePadding="20dp"

            android:text="Remove Skill"
            android:layout_marginLeft="20dp"
            android:background="#fff"/>
    </LinearLayout>

    <Button
        android:id="@+id/nextex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="#fff"

        android:drawablePadding="20dp"
        android:padding="8dp"
        android:text="Next" />
</RelativeLayout>


</ScrollView>